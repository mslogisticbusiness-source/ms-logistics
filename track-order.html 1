<section class="track-container">

    <h2>Track Your Shipment</h2>

    <div class="track-box">
        <input type="text" id="awb" placeholder="Enter AWB Number" class="input">
        <button onclick="trackNow()" class="btn">Track Now</button>
    </div>

    <div id="result" class="track-result" style="display:none;">
        <h3>Shipment Summary</h3>

        <p><strong>AWB:</strong> <span id="awb_no"></span></p>
        <p><strong>Courier:</strong> <span id="courier"></span></p>
        <p><strong>Status:</strong> <span id="status"></span></p>
        <p><strong>Last Update:</strong> <span id="update"></span></p>

        <h3>Tracking History</h3>
        <ul id="history"></ul>
    </div>

</section>

<script>
function trackNow() {
    let awb = document.getElementById("awb").value;
    if (!awb) {
        alert("Please enter AWB number");
        return;
    }

    // Placeholder (actual API connect बाद में)
    document.getElementById("result").style.display = "block";
    document.getElementById("awb_no").innerText = awb;
    document.getElementById("courier").innerText = "Shadowfax";
    document.getElementById("status").innerText = "In Transit";
    document.getElementById("update").innerText = "25 Nov 2025";

    let historyBox = document.getElementById("history");
    historyBox.innerHTML = `
        <li>25 Nov: Shipment picked up</li>
        <li>26 Nov: In Transit</li>
        <li>27 Nov: Arrived at Hub</li>
    `;
}
</script>

